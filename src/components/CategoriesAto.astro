---
import categories from "../data/categories.json";
---
<section class="py-20 bg-gradient-to-b from-gray-50 to-gray-200">
    <div class="container mx-auto px-6 lg:px-8">
        <h2 class="text-3xl sm:text-4xl font-bold text-center text-green-900 mb-12 lg:mb-16">
            Categor√≠a de Productos
        </h2>
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
            {categories.map((category) => (
                <div class="rounded-xl overflow-hidden transition-transform duration-300 transform hover:scale-105 relative group border-2 border-primary">
                    <div class="relative">
                        <img src={category.imageUrl} alt={category.name} class="w-full h-70 sm:h-72 md:h-96 lg:h-96 object-cover transition-all duration-500"/>
                        <div class="absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center text-center lg:hidden">
                            <div>
                                <h3 class="text-white text-center text-lg sm:text-xl font-semibold mb-4 break-words px-12">{category.name}</h3>
                                <a class="bg-gradient-to-b from-primary to-secondary text-white py-2 px-4 shadow-md rounded-full" href={`/products/${category.slug}`}>
                                    Ver Productos
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                        <div class="absolute inset-0 px-4 py-6 group-hover:bg-gradient-to-br group-hover:from-primary group-hover:via-secondary group-hover:to-custom group-hover:opacity-100 transition-colors hidden sm:block">
                            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center duration-500 ease-in-out opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-colors">
                                <h3 class="text-white text-xl md:text-2xl font-bold mb-4">
                                    <a title={category.name} href={`/products/${category.slug}`}>{category.name}</a>
                                </h3>
                                <a class="inline-flex items-center justify-center border hover:border-yellow-300 rounded-md h-12 w-12 duration-500" title={category.name} href={`/products/${category.slug}`}>
                                    <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 200 200" class="h-2.5 w-2.5 sm:h-4 sm:w-4 fill-yellow-300">
                                        <g>
                                            <path d="M160.26,177.05c-0.74-2.09-2.15-2.98-3.25-4.08C106.66,122.58,56.29,72.21,5.91,21.86C3.07,19.02,0.7,16.08,0.8,11.76 c0.1-4.41,1.92-7.8,5.79-9.87c3.95-2.11,8-1.96,11.78,0.49c1.52,0.99,2.82,2.35,4.12,3.64c50.22,50.19,100.43,100.4,150.61,150.63 c1.12,1.12,1.9,2.59,3.12,4.27c1.46-2.3,1.09-3.69,1.09-4.97c0.02-36.76,0.01-73.53,0.03-110.29c0-7.56,4.8-12.31,11.96-12.01 c5.63,0.23,10.19,4.69,10.54,10.35c0.07,1.14,0.04,2.3,0.04,3.45c0,46.3-0.14,92.6,0.13,138.9c0.05,8.53-5.41,13.43-13.21,13.38 c-46.87-0.26-93.75-0.12-140.62-0.14c-7.72,0-12.62-4.91-12.24-12.13c0.29-5.52,4.61-9.96,10.12-10.36 c1.37-0.1,2.76-0.05,4.13-0.05c35.85,0,71.69,0,107.54,0C157.09,177.05,158.46,177.05,160.26,177.05z"></path>
                                        </g>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>