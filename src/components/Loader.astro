---
const message = Astro.props.message ?? 'Cargando...';
---
<div class="fixed inset-0 flex items-center justify-center bg-primary bg-opacity-100 z-50">
    <div class="flex flex-col items-center text-center">
        <div class="border-8 border-gray-300 border-t-white rounded-full w-16 h-16 animate-spin"></div>
        <p class="text-white mt-4 text-lg font-semibold">{message}</p>
    </div>
</div>